template(name="geraHome")
  .metro: .metro-wrapper
    +metroDecoratorTiles

    .tile-group-1
      .tile.wisteria(data-app='roleManager')
        span.center.middle.caption: span.table: i.ico.icon-key-outline
        span.bottom.middle.caption PHÂN QUYỀN
      .tile.pink(data-app='staffManagement')
        span.center.middle.caption: span.table: i.ico.icon-users-outline
        span.bottom.middle.caption NHÂN VIÊN
      .tile.alizarin(data-app='transactionManager')
        span.center.middle.caption: span.table: i.ico.icon-credit-card
        span.bottom.middle.caption SỰ CỐ
      .tile.peter-river(data-app='merchantReport')
        span.center.middle.caption: span.table: i.ico.icon-chart-pie-outline
        span.bottom.middle.caption BÁO CÁO

    .tile-group-2
      .tile.lime.double(data-app='customerManagement')
        span.center.left.caption: span.table: i.ico.huge.icon-contacts
        span.bottom.middle.caption QL NHÀ CUNG CẤP
      .tile.carrot.double(data-app='distributorManagement')
        span.center.left.caption: span.table: i.ico.huge.icon-anchor-outline
        span.bottom.middle.caption QL ĐẠI LÝ
      .tile.belize-hole.double(data-app='geraProductManagement')
        span.center.left.caption: span.table: i.ico.huge.icon-puzzle-outline
        span.bottom.middle.caption QL SẢN PHẨM

      .tile.orange(data-app='sales')
        span.center.middle.caption: span.table: i.ico.icon-tags
        span.bottom.middle.caption KPI (TASK)
      .tile.teal(data-app='billManager')
        span.top.middle.caption NHÓM
        span.center.middle.caption: span.table: i.ico.icon-clipboard
        span.bottom.middle.caption SẢN PHẨM

    .tile-group-1
      .tile.pomegranate(data-app='merchantOptions')
        span.s7.top.middle.caption TÙY CHỈNH
        span.center.middle.caption: span.table: i.ico.icon-wrench-outline
        span.bottom.middle.caption HỆ THỐNG
      .tile.belize-hole(class="{{metroUnLocker Summary.data.merchantCount}}")
        span.center.middle.caption: span.table: i.ico.icon-book
        span.bottom.middle.caption NHẬT KÝ
      .tile.green-sea(data-app='import')
        span.center.middle.caption: span.table: i.ico.icon-download-outline
        span.bottom.middle.caption GỬI MAIL
      .tile.dark(data-app='deliveryManager')
        span.center.middle.caption: span.table: i.ico.icon-truck-1
        span.bottom.middle.caption  GÓP Ý

    +metroDecoratorTiles
