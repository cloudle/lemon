template(name="saleProductThumbnail")
  .thumbnails(class="{{styles}}")
    .right-caption {{productNameFromId product}}
    +avatarImageComponent(avatar=avatarUrl alias="{{productNameFromId product}}")
    .horizontal-meter
      //background-color: {{meterStyle.color}}
      .meter-wrapper: .meter-progress(style="height: {{meterStyle.percent}}%; background-color: {{meterStyle.color}}")
    .short-desc.quality {{pad quality}}
    .full-desc.price {{formatNumber finalPrice}} <small>VNĐ</small>
    //.discount
    //  if false
    //    span.s4 -{{round discountPercent}}<span class="h5">%</span>

    .single-price {{formatNumber price}} VNĐ
    .trash: i.icon-bag
    .command-button.up.icon-right-open-4
    .command-button.down.icon-left-open-4