template(name="merchantAccountOptions")
  .section.top.panel.panel-default.options-section
    .panel-heading
      span.icon-contacts Hồ sơ
    .panel-body
      .collapsible-row
        .description Họ tên
        input.input-field(value="{{profile.fullName}}")
      .collapsible-row
        .description Giới tính
        .input-field {{genderString gender}}
        .commands
          input(binding="switch" type="checkbox" name="gender")
      .collapsible-row
        .description Sinh nhật
        input.input-field(name="dateOfBirth" binding="datePicker" todayHighlight="true" maxlength="20" tabindex="4")
      .collapsible-row
        .description Địa chỉ hiện tại
        input.input-field(value="{{address}}" placeholder="chưa cập nhật")
      .collapsible-row
        .description Địa chỉ Email
        input.input-field(value="{{email}}" placeholder="chưa cập nhật")
      .collapsible-row
        .description Địa chỉ Skype
        input.input-field(value="{{im}}" placeholder="chưa cập nhật")


  .section.top.panel.panel-default.options-section
    .panel-heading
      span.icon-key-outline Đổi mật khẩu
    .panel-body
      .collapsible-row
        .description Mật khẩu hiện tại
        input.input-field(type="password" maxlength="40" placeholder="nhập mật khẩu hiện tại")
      .collapsible-row
        .description Mật khẩu mới
        input.input-field(type="password" maxlength="40" placeholder="nhập mật khẩu mới")
      .collapsible-row
        .description Xác nhận mật khẩu
        input.input-field(type="password" maxlength="40" placeholder="nhập lại mật khẩu mới")
