@require 'nib'

#content.role-manager
  ul.permission-group
    padding 0
    > li
      clearfix(); list-style none
      padding 10px 5px 0 20px
      &:nth-child(even)
        background-color #F5F5F5
      .group-caption
        float left
        border-radius 50%; padding 12px
        color #868686; background-color #dddddd

      ul.permission-details
        float left; padding 0; margin-left 20px
      .permission-item
        display inline-block
        list-style none
        text-align center
        padding 0 5px
        width 100px
        .role-label
          margin-top 3px
          font-size 12px
          overflow ellipsis