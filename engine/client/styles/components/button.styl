@require '../lib.import.styl'

.lemon.btn
  cursor pointer
  color #ffffff
  border-radius 2px
  padding 3px 12px 2px 12px
  for $color in colors
    &.{$color[0]}
      background-color $color[1]
      background linear-gradient(top, $color[1], darken($color[1], 3));
      box-shadow inset 0px 1px 0px $color[1], 0px 3px 0px 0px darken($color[1], 7), 0px 4px 4px #999;
  &:focus
    outline none
  &[class^="icon-"], &[class*=" icon-"]
    padding-left 5px
    &:before
      margin-right 5px
  &:active
    box-shadow 0px 0px 0px 3px rgba(0, 0, 0, 0.1);
    padding-top 4px; padding-bottom 4px

.lemon.rounded.btn
  cursor pointer
  color #FFFFFF
  box-shadow 0px 0px 0px 2px rgba(0, 0, 0, 0.1);
  border-radius 50%
  padding 3px
  transition background-color 1s
  &:before
    margin-right 3px
    margin-left 3px
  for $color in colors
    &.{$color[0]}
      background-color $color[1]
      &:hover, &:active
        background-color lighten($color[1], 5)

  &.tiny
    box-shadow none
    padding 1px
    font-size 10px
    &:before
      margin-right 2px
      margin-left 2px

.editor-wrapper .flat.btn
  outline none !important
  margin 0; padding-top 15px
  border-radius 0
  min-height 50px
  background-color #E1EAF0
  border-left solid 1px #DDD
  border-right solid 1px #DDD
  font-size 16px
  transition color 0.5s, background-color 0.5s
  for $color in colors
    &:hover
      color #FFFFFF
    &.{$color[0]}
      background-color lighten($color[1], 45)
      color darken($color[1], 10)
      &:hover
        background-color lighten($color[1], 25)