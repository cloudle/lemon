.printing-header
  clearfix()
  position relative
  height 80px
  border-bottom dashed 1px #666666
  .branding
    absolute right 10px bottom 1px
    .company-name
      text-align right
      font-size 30px
      text-transform uppercase
    .company-address
      text-align right
      margin-right 43px !important
  .info
    absolute bottom 1px
    color #666666
    float left
    .company-phone
      margin-left 50px !important

  .rounded-phone
    absolute bottom -19px left 10px
  .rounded-location
    absolute bottom -19px right 10px

  .rounded-wrapper
    position relative
    .rounded-icon
      absolute top 0 left 0
      border-radius 50%;
      padding 4px; font-size 18px
      border solid 4px #dfdfdf
    img
      width 35px; height 35px

.printing-info
  padding-top 25px
  .document-name
    font-size 30px; font-weight lighter
    text-align center

.bill-info
  clearfix()
  .seller-info
    float left
  .buyer-info
    float right