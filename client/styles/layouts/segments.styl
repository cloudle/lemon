@require 'jeet'
@import 'rupture'
@require '../lib.import.styl'

.segments-container
  padding 5px 3px
  height 100%
  .segments-column
    height 100%
    display flex
    flex-direction column
    /*overflow-y scroll*/
    padding 5px 0
  /*background-color #C7C7C7*/
  /*border-radius 3px*/

  &.size2 .segments-column
    column(1/2, gutter: 0)
  &.size3 .segments-column
    column(1/3, gutter: 0)
    .item-wrapper
      padding 0 1px
      +above(1600px)
        span(1/2)
  &.size4 .segments-column
    column(1/4, gutter: 0)
  &.size5 .segments-column
    column(1/5, gutter: 0)
  &.size6 .segments-column
    column(1/6, gutter: 0)