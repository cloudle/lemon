print-mode()
  *
    visibility hidden !important
  .printable-area, .printable-area *
    visibility visible !important
  .printable-area
    fixed left 0 top 0
    margin 0 !important
    width 100%; height 100%
    min-width 100%; min-height 100%
  html, body
    width 100%; height 100%
    margin 0; padding 0

@media print
  print-mode()
html.print-mode
  print-mode()