@require '../lib.import.styl'

.lemon-timelime
  position relative
  padding 15px 0
  &:before
    content " "
    height 100%; absolute top 0 left 74px
    border-left dashed 1px #7AC5F9

.timeline-block
  position relative
  clearfix()

  for $color in colors
    &.{$color[0]}
      .timeline-thumb, .avatar
        border solid 1px $color[1]; color $color[1]

  margin-bottom 20px
  .timeline-hook
    absolute top 27px left 10px
    width 37px; text-align right
    font-weight lighter
  .timeline-thumb
    absolute top 5 left 50px
    border-radius 50%; padding 2px
    background-color #FFFFFF; font-size 12px
    border solid 1px #666666; color #666666
    z-index 1
  .timeline-avatar
    absolute top 10px left 50px
    .avatar, .avatar.image img
      width 50px; height @width
      border-radius 50%
      background-color #F7F7F7
    .avatar.letter
      display block; text-align center
      width 50px; height @width; line-height @width




  .timeline-content
    margin-left 100px
    min-height 50px

