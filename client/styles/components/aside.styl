@require '../lib.import.styl'

aside.modal
  .modal-dialog, .modal-header, .modal-body, .modal-footer
    background-color #ffffff
    $noise-material()
  &.left  { .modal-dialog { height: 100%; margin: 0; } }
  &.right { .modal-dialog { height: 100%; margin: 0 0 0 auto; } }
  .modal-body
    min-height 50px; border-radius

//Animation for aside
.swipe
  opacity 0
  transition opacity .15s linear
  &.in
    opacity 1

.modal.swipe
  &.left
    left -25%
    transition opacity 0.3s linear, left 0.3s ease-out
  &.right
    right -25%
    transition opacity 0.3s linear, right 0.3s ease-out

.modal.swipe.in
  &.left { left: 0%; }
  &.right { right: 0%; }