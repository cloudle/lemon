@require '../lib.import.styl'

.step-filter
  list-style none
  text-align center
  li
    position relative
    display inline-block
    margin-right -4px
    &:before
      content ""
      display block
      border-top 1px solid #ddd
      border-bottom 1px solid #fff
      width 100%; height 1px
      absolute top 50%
      z-index 1

    span
      cursor pointer
      display block
      background-color #f7f7f7
      background-image linear-gradient(top, #f7f7f7, #e7e7e7)
      color #a7a7a7
      margin 0 40px
      width 40px; height 40px; line-height 40px
      position relative
      text-align center
      border-radius 50%
      box-shadow 0px 3px 8px #aaa, inset 0px 2px 3px #fff
      font-size 1.5em; speak none
      z-index 1
      &:before {margin:0;}
      &:after
        content ""
        display block
        border-top 2px solid #ddd
        absolute top -8px left -8px bottom -8px right -8px
        border-radius 50%
        box-shadow inset 0px 8px 48px #ddd
        z-index -1
      &:hover
        text-decoration none
        color #555
        background #ffffff
