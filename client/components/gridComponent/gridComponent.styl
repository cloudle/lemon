@require 'jeet'
@import 'rupture'
@import "../../styles/lib.import.styl"

.igrid
  .igrid-header
    flex: 0 0 auto
    span.title
      padding-left 5px
    span.icon
      float right; margin-right 5px
      font-size 16px
  .igrid-content
    clearfix()
    overflow-y scroll
    overflow-x hidden

.segments-container
  padding 5px 3px
  height 100%
  .segments-column
    height 100%
    display flex
    flex-direction column
    /*overflow-y scroll*/
    padding 5px 0
    /*background-color #C7C7C7*/
    /*border-radius 3px*/

  &.size2 .segments-column
    column(1/2, gutter: 0)
  &.size3 .segments-column
    column(1/3, gutter: 0)
    .item-wrapper
      padding 0 1px
      +above(1600px)
        span(1/2)
  &.size4 .segments-column
    column(1/4, gutter: 0)
  &.size5 .segments-column
    column(1/5, gutter: 0)
  &.size6 .segments-column
    column(1/6, gutter: 0)

dualLeftWidth = 300px
.dual-content
  clearfix()
  background-color #efeff4
  height 100%
  .dual-addon
    float left
    width dualLeftWidth; height 100%
    //background-color red
    margin-left -100%
    border-right solid 1px #C9C9C9
    .group-wrapper
      .caption
        font-size 18px
        padding 5px 0 5px 10px
        &.group
          padding-right 10px; text-align right
        &.inner
          background-color #ffffff
          padding-left 50px
          border-top solid 1px #C9C9C9
          &:last-child
            border-bottom solid 1px #C9C9C9
  .dual-detail-wrapper
    float left; width 100%; height 100%
    .dual-detail
      margin-left dualLeftWidth
      height 100%
      //background-color yellow