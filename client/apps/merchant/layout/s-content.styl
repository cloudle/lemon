@import 'jeet'
@import 'rupture'
@import "../../../styles/lib.import.styl"
editor-font-size = 12px

#container
  width 100%; height 100%
  padding 43px left-pane-size 0 0

  #header
    background-color #fff
    .caption-row
      clearfix()
      padding 10px 0 5px 0
      .title
        float left
        font-size 20px
        font-weight lighter
        margin-left 5px
        text-transform uppercase
        color #707070
      .filter
        float right
        margin-right 5px
    .commands
      float right
      margin-right 10px
    .switches
      float right
      padding-bottom 5px
      margin-right 5px

  #content
    height 100%
    background-color #fff
    overflow-y scroll
    margin 3px 0 1px 0
  #footer
    background #ffffff
    padding-top 5px
    min-height 5px
    clearfix()
    &.gray
      /*background #f7f7f7 url(images/dot-bg.png) repeat center top*/
      $noise-material(#f7f7f7, 'light')
    .extra
      display none
      border-bottom solid 1px #dfdfdf
      margin-bottom 10px


  .editor-row
    clearfix()
    font-size editor-font-size

  .editor-row .editor-wrapper
    float left
    position relative
    padding-left 5px
    padding-top 5px
    &.right { float: right; padding-right: 5px; padding-left: 0; }

    .field
      width 100%; margin 5px 0

    .ilabel
      absolute left 15px top 0; z-index 10
      padding 0 4px; line-height 10px
      font-size 10px
      text-align center
      color #fff; background-color #F35112
      border-radius top 2px
      &.optional
        background-color: lime;
      &.center
        left: 50%;
        transform translate(-50%, 0)
      &.right
        left: auto; right: 15px
    .btn
      margin 5px 0; padding 4px 12px
      border-radius 3px
    > input
      outline: none
      border 1px solid #DFDFDF
      width 100%; margin 5px 0
      padding 0 7px; line-height 28px
      border-radius 3px
      font-size: editor-font-size
      &:disabled
        background-color #fff

#content > .detail-grid
  margin 0; padding 4px 2px 0 2px
  min-height 104px
  .col, .item-wrapper
    float: left; padding 0 2px
    +above(1024px)
      span(1/3)
    +above(1200px)
      span(1/4)
    +above(1600px)
      span(1/5)
    +above(1900px)
      span(1/6)