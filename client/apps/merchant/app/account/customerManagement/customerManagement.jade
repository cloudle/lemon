template(name="customerManagement")
  #header
    .caption-row
      .title DANH SÁCH KHÁCH HÀNG
  #content
    .dual-content
      .dual-detail-wrapper
        .dual-detail
          +customerManagementOverviewSection currentCustomer
          .section Old debt section
          .section Auto debt section
      .dual-addon
        .search-filter.icon-search-8
          input(type="text")
        each managedCustomerList
          .group-wrapper
            .group.caption {{key}}
            each childs
              .inner.caption(class="{{activeClass}}")
                +avatarImageComponent(avatar=avatarUrl alias=name instance=this)
                span {{name}}