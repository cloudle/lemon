template(name="productManagementImportDetails")
  tr.header-row
    td(colspan="6")
      | .
      .bill-header <b>{{momentCalendar version.createdAt}}</b> ({{description}})
  each importDetails
    tr.detail-row
      td.first-column {{distributorName}}
      td {{expireDate}}
      td.number {{formatNumber inStockQuality}}/{{formatNumber importQuality}}
      td.number {{formatNumber importPrice}}
      td.number {{formatNumber totalPrice}}

    each saleDetails
      tr.detail-row
        td.first-column
         span.icon-forward-3 {{buyerName}}
        td {{momentFormat version.createdAt "DD/MM/YYYY"}}
        td.number {{formatNumber saleQuality}}
        td.number {{formatNumber price}}
        td.number {{formatNumber finalPrice}}