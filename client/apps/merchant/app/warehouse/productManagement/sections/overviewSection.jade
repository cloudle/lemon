template(name="productManagementOverviewSection")
  .section.top.panel.panel-default
    input.hidden.avatarFile(type="file")
    .panel-heading
      +avatarImageComponent(avatar=avatarUrl alias=name)
      .caption
        input.editable(name="productName" value="{{name}}" maxlength="50")
        if skulls
          span.blured-color ({{skulls}})
      .sub1
        span.blured-color Tồn kho: {{formatNumber inStockQuality}}
        input.editable(name="productPrice" value="{{price}}" maxlength="20" style="width: 85px; text-align: right;")
        span.blured-color vnđ
      .sub2: span.blured-color Giá nhập: {{formatNumber importPrice}} vnđ - Giá trung bình: {{formatNumber averagePrice}} vnđ
      .commands
        if showEditCommand
          .lemon.btn.rounded.lime.icon-ok-6.syncProductEdit
    .panel-footer
      span.icon-angle-right