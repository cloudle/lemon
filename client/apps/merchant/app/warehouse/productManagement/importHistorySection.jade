template(name="productManagementSalesHistorySection")
  .section.panel.panel-default.printable-area
    .panel-heading
      .show-on-print
        +merchantPrintingHeader
        .printing-info
          .document-name {{name}}

      if basicDetail.isShowDetail
        table.lemon-grid
          tr.table-header
            th(style="width:auto") ĐƠN VỊ TÍNH
            th(style="width:110px") HẠN SD
            th(style="width:80px") QUI ĐỔI
            th(style="width:80px") TỒN KHO
            th.number(style="width:120px") GIÁ NHẬP

          each basicDetail.detail
            if detailEditingMode
              +productManagementDetailEditor detailEditingData
            else
              tr.detail-row.edit-detail.click-enable
                td.has-commands
                  span {{unitName}}
                  .commands
                    if allowDelete
                      .lemon.rounded.tiny.btn.blue.delete-basicDetail: span.icon-minus-4
                td {{expireDate}}
                td {{conversionQuality}}
                td {{unitQuality}}
                td.number {{formatNumber importPrice}}
          if basicDetailModeEnabled
            tr.group-summary-row
              td: .lemon.btn.lime.basicDetailModeDisable.icon-ok-6 Kết Thúc

    .panel-body.debt-details
      if newImport.isShowDetail
        table.lemon-grid.safe
          tr
            th(style="width:auto") NHÀ CUNG CẤP
            th(style="width:110px") HẠN SD
            th.number(style="width:80px") TỒN KHO
            th.number(style="width:120px") GIÁ NHẬP
            th.number(style="width:120px") TỔNG TIỀN

          each newImport.detail
            +productManagementImportDetails this

    .panel-footer
      .right-float
        span.s5 TỔNG TỒN
        span.s3 <b>{{formatNumber inStockQuality}}</b>
        span.s5 TỔNG NHẬP
        span.s3 <b>{{formatNumber totalQuality}}</b>

template(name="productManagementImportHistoryHeader")
  tr
    th(style="width:auto")
    th(style="width:100px")
    th(style="width:80px")
    th(style="width:85px")
    th(style="width:115px")
