template(name="distributorManagementImportsHistorySection")
  .section.panel.panel-default
    .panel-heading
      table.lemon-grid: tr
        th(style="width:auto") SẢN PHẨM
        th(style="width:50px") SL
        th(style="width:80px") QUI CÁCH
        th.number(style="width:120px") ĐƠN GIÁ
        th.number(style="width:180px") THÀNH TIỀN
    .panel-body
      table.lemon-grid
        +distributorManagementImportHistoryHeader
        each customImport
          +distributorManagementCustomImportDetails this

        tr
          td: input(name='debtDate' type="text" size="10")
          td: input(name='description' type="text" size="10")
          td: input.number(name='totalCash' type="text" size="10")
          td: input.number(name='depositCash' type="text" size="10")
          td: .lemon.btn.lime.icon-bag.create-customImport THEM MOI 1

      table.lemon-grid.safe
        +distributorManagementImportHistoryHeader
        each defaultImport
          +distributorManagementImportDetails this
    .panel-footer
      h3 Công ty nợ: {{formatNumber totalDebit}} VNĐ<br />
      h3 Tổng tiền : {{formatNumber totalPurchases}} VNĐ


template(name="distributorManagementImportHistoryHeader")
  tr
    th(style="width:auto")
    th(style="width:50px")
    th(style="width:80px")
    th(style="width:120px")
    th(style="width:180px")