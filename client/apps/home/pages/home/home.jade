template(name="home")
  //.slider(style="width: 100%; height: 450px;")
  .home-wrapper
    .main-left
      .youtube-wrapper
        iframe(width="640" height="360" src="//www.youtube.com/embed/lzpE9_dMovU?rel=0&amp;showinfo=0&amp;autoplay=1" frameborder="0" allowfullscreen)
      //.title eds
      //p Mạng quản lý kinh doanh tho
    .main-right

      if authenticated
        .login-section.animated.bounceIn
          #gotoMerchantButton.btn.icon-shop
          #logoutButton.btn.icon-power.background-pumpkin
      else
        .login-section.animated.bounceIn
          #authButton.btn.icon-key-1(class="{{sessionGet 'loginValid'}}" tabindex="3")
          input.login-field#authSecret(type="password" placeholder="{{i18n 'form.password'}}" maxlength="30" tabindex="2")
          input.login-field#authAlias(type="text" placeholder="{{i18n 'form.userAccount'}}" maxlength="50" tabindex="1")

      .caption ĐĂNG KÝ!
      .registeration-section
        .lemon-field
          input#companyName(type="text" placeholder="{{i18n 'form.companyName'}}")
        .lemon-field
          input#companyPhone(type="text" placeholder="{{i18n 'form.contactPhone'}}" maxlength="11")
        .lemon-field
          input#account(type="text" placeholder="{{i18n 'form.userAccount'}} *")
        .lemon-field.group.row
          .col.col-sm-6: input.secret-field#secret(class="{{registerSecretValid}}" type="password" placeholder="{{i18n 'form.password'}}  *")
          .col.col-sm-6: input.secret-field#secretConfirm(class="{{registerSecretValid}}" type="password" placeholder="{{i18n 'form.confirm'}} *")
        .lemon-field
          .accept-terms <b>K</b>hi nhấn <b>Đăng Ký</b>, bạn <b>đồng ý</b> và đã đọc <b>điều khoản dịch vụ</b> của chúng tôi.
        #merchantRegister.btn.pull-right(class="{{registerValid}}") {{i18n 'register'}}
        #terms.btn.pull-right(class="{{termButtonActive}}") {{i18n 'term'}}